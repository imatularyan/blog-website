<div class="form-group">
  <label for="title" class="fs-6 fw-light">Title:</label>
  <input
    required
    value="<%=article.title%>"
    type="text"
    name="title"
    id="title"
    class="form-control mb-3 mt-1"
    style="height: 45px"
  />
</div>
<div class="form-group">
  <label for="description" class="fs-6 fw-light">Description:</label>
  <textarea
    name="description"
    id="description"
    class="form-control mb-3 mt-1"
    style="height: 110px"
  >
<%=article.description%></textarea
  >
</div>
<div class="form-group">
  <label for="markdown" class="fs-6 fw-light">Markdown:</label>
  <textarea
    required
    name="markdown"
    id="markdown"
    class="form-control mt-1"
    style="height: 200px"
  >
<%=article.markdown%></textarea
  >
</div>
<div class="mt-4 text-end">
  <a href="/" class="btn btn-danger mx-2">Cancel</a>
  <button type="submit" class="btn btn-primary">Save</button>
</div>
